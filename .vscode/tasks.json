{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸŒ¾ Run Crop Recommendation App",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/streamlit.exe",
            "args": [
                "run",
                "frontend/streamlit_dashboard/app.py",
                "--server.port=8503",
                "--server.headless=true"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "ðŸš€ Launch App with Browser",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "start http://localhost:8503 && ${workspaceFolder}/.venv/Scripts/streamlit.exe run frontend/streamlit_dashboard/app.py --server.port=8503"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}